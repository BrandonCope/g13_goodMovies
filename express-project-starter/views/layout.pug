doctype html
html
  head
      block head
        title="Good Movies"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(href="https://fonts.googleapis.com/css2?family=Lato&family=Oswald:wght@300&family=Poppins:wght@300&display=swap" rel="stylesheet")
  body
    nav
      ul
        if locals.authenticated
          p Welcome #{user.firstName}, to Good Movies
          form(action="/logout" method='post')
            button(type="submit") Log Out
        else
          a(href="/signup") Sign Up
          div
            a(href="/login") Log In

    block content
