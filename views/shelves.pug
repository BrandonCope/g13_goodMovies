extends layout-nav

append head
  link(rel='stylesheet' href='/stylesheets/shelves.css')

block content
  .shelves_title
    h2 Movie Shelves:
    .shelf_errors
    form(class='shelf-form' action='/shelves' method="post")
      input(type="hidden" name="_csrf" value=csrfToken)
      input(type="text" class="shelf_title" name="shelf_title" placeholder="Shelf title...")
      button(type="submit" class='add-shelf-button') Add New Shelf
  .shelves
    .shelf-tiles
      each shelf in shelves
        .shelf-item
          a(href=`/shelves/${shelf.id}`)
            img(src='https://www.chicagofilmarchives.org/wp-content/uploads/2013/12/PageCollection_horizontal1.jpg' class='shelf-img')
            .shelf-title= shelf.shelf_title
  script(src="/javascripts/shelfDOM.js" type="module")
