doctype html
html
  head
      block head
        title="Good Movies"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/movie-detail.css')
        link(href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400;500;600;700;800&family=Mukta:wght@200;300;400;500&family=Outfit:wght@200;500&family=Roboto:wght@700&display=swap" rel="stylesheet")
  body
    nav
      ul
        if locals.authenticated
          p Welcome #{user.firstName}, to Good Movies
          form(action="/logout" method='post')
            button(type="submit") Log Out
        else
          a(href="/signup") Sign Up
          div
            a(href="/login") Log In

    block content
